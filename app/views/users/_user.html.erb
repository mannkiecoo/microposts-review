<li id="user-<%= user.id %>">
<%= link_to gravatar_for(user, size: 50), user %>
<%= link_to user.name, user %>
<% if current_user == @user %>
<%= form_for(current_user.following_relationships.find(params[:id]).followed,
    html: { method: :delete },
    remote: true) do |f| %>
  <%= f.submit "Delete", class: "btn" %>
<% end %>
<% end %>
</li>

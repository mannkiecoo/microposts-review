<li id="user-<%= user.id %>">
<%= link_to gravatar_for(user, size: 50), user %>
<%= link_to user.name, user %>
<%# if current_user == @user %>
<%# 自分じゃなかったらフォローするかフォロー解除のボタンを出す %>

    <%# フォロー済みだったら解除ボタンを出す %>
    <% if current_user.following?(user) %>
        <%= form_for(current_user.following_relationships.find_by(followed_id: user.id),
            html: { method: :delete },
            remote: true) do |f| %>
            <%= f.submit "Delete", class: "btn" %>
        <% end %>
    <% end %>
<%# end %>

</li>
